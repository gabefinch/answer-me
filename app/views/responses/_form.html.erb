<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3 class="panel-title">
          Response to <%= @question.title %>
        </h3>
      </div>
      <div class="panel-body">
        <%= bootstrap_form_for([@question, @response]) do |f| %>
          <div class="form-group">
            <%= f.text_area :body %>
          </div>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-2"></div>
</div>

<div class="row">
<div class="col-sm-2"></div>
<div class="col-sm-8">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title">Users <span class="badge"><%= @users.count %></span></h3>
    </div>
    <div class="panel-body">
      <ul class="list-group">
        <% @users.each do |user| %>
            <li class="list-group-item">
              <%= link_to user.username, user_path(user), id: "user-link-#{user.id}" %>
              <span class="pull-right">Questions <span class="badge"><%= user.questions.count %></span></span>
            </li>
        <% end %>
      </ul>
      <%= link_to "Add user", new_user_path, class: "btn btn-info btn-sm" %>
    </div>
  </div>
</div>
<div class="col-sm-2"></div>
</div>
